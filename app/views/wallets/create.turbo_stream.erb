<%= turbo_stream.prepend "toast" do %>
  <% if notice %>
      <%= render_toast id: "default_toast", description: notice %>
    <% end %>

    <% if alert %>
      <%= render_toast description: alert, id: "alert_toast", variant: :destructive %>
    <% end %>
<% end %>
