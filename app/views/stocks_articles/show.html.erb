<%= turbo_frame_tag :stocks_articles do %>
    <div>
      <% @news_feed.each do |article| %>
        <div class="flex justify-between border-b border-b-gray-200 py-2 gap-4">
          <div class="flex flex-col py-4">
            <div class="flex text-xs text-gray-300 gap-2">
              <h2><%= article[:source] %></h2> |
              <span><%= time_ago(article[:datetime]) %></span>
            </div>
            <h1 class="font-semibold"><%= article[:headline] %></h1>
          </div>
          <%= image_tag(article[:image], class: "h-24 w-24 object-cover rounded") %>
        </div>
      <% end %>
    </div>
<% end %>
