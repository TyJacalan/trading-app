<% unless @suggestions.nil? || @suggestions.empty? %>
  <ul>
    <% @suggestions.cycle.take([@suggestions.count, 5].min).each do |item| %>
      <%= list_item(value: item[:value], 
                    name: item[:name], 
                    selected: item[:selected], 
                    action: "click->ui--filter#selectItem") %>
    <% end %>
  </ul>
<% end %>
