<%= link_to root_path, class: "p-4" do %>
    <i class="fa fa-arrow-left"></i>
<% end %>

<div class="flex justify-between">
  <%= render "form", transaction: @transaction, transaction_type: @transaction_type %>
  
  <div class="p-4">
    <h1 class="py-4">Portfolio:</h1>
    <% if @stocks_balance.present? %>
      <%= @stocks_balance.each do |symbol, balance| %>
        <p><%= symbol %>: <%= balance %></p>
      <% end %>
    <% end %>
  </div>
</div>