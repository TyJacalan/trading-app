<%= form_for(user, url: admin_user_role_path(user), 
             method: :patch, 
             data: { controller: 'auto-submit' }, 
             html: { id: "role_form_#{user.id}" }) do |f| %>
  <% f.select :role, ["standard", "admin"], { }, 
    { data: { action: "auto-submit#submit" }, id: "role_select_#{user.id}",
    class: "rounded-md border border-input bg-background w-3/4 min-w-32 px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
  }%>
<% end %>
