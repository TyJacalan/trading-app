<%= render_form_for("delete_user", url: admin_user_path(user), method: :delete) do |f| %>
  <%= render_dialog do %>
    <%= dialog_trigger do %>
      <i class="fa fa-trash cursor-pointer hover:text-destructive"></i>
    <% end %>

    <%= dialog_content do %>
      <div class="flex flex-col space-y-2 text-center sm:text-left">
        <h2 class="text-lg font-semibold">Are you absolutely sure?</h2>
        <p class="text-sm text-muted-foreground">
        This action cannot be undone. This will permanently delete <%= @user.first_name %>'s account and remove their data from our servers.
        </p>
      </div>
      
      <div class="flex w-full flex-row items-center justify-end gap-2 mt-4">
        <%= render_button "Cancel", variant: :outline, data: { action: "ui--dialog#close" } %>
        <%= f.submit "Delete", variant: :destructive %>
      </div>
    <% end %>
  <% end %>
<% end %>
