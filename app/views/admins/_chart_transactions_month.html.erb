<%= render_card class: 'w-full lg:flex-1 p-6 text-center' do %>
  <label class='text-lg text-primary font-bold tracking-tight'>Transactions per Month</label>
  <%= column_chart @transactions.group_by_month(:created_at, format: "%b %Y").count, 
    xtitle: 'Month', 
    ytitle: 'Count', 
    empty: 'No transactions data', 
    colors: ['#d94545'] %>
<% end %>
